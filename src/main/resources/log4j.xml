<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<!-- source : https://examples.javacodegeeks.com/enterprise-java/log4j/log4j-writing-different-log-files-example/ -->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
    <!-- Console Appender -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} %5p %c - %m%n"/>
        </layout>
    </appender>

    <!--  Log to different Appender -->
    <appender name="log1" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="logs/log1.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n"/>
        </layout>
    </appender>
    <!--   Log to different  Appender -->
    <appender name="log2" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="logs/log2.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n"/>
        </layout>
    </appender>

    <!-- if additivity is true, log in package com.lankio.bla will be written to other appender, otherwise not -->
    <logger name="com.lankio.bla" additivity="false">
        <param name="level" value="INFO"/>
        <appender-ref ref="log1"/>
    </logger>

    <root>
        <level value="DEBUG"/>
        <appender-ref ref="console"/>
        <appender-ref ref="log2"/>
    </root>

</log4j:configuration>